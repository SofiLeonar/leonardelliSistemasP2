datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Producto {
  id Int @id @default(autoincrement())
  nombre String
  categoria String
  proveedor String
  precio_base Int
  stock Stock[]
}

model Sucursal {
  id Int @id @default(autoincrement())
  nombre String
  direccion String
  stock Stock[]
}

model Stock {
  id Int @id @default(autoincrement())
  cantidad Int
  producto Producto @relation(fields: [productoId], references: [id])
  productoId Int
  sucursal Sucursal @relation(fields: [sucursalId], references: [id])
  sucursalId Int
}
